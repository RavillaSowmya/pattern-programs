#include <stdio.h>
int main()
{
    int rows,i,j;
    scanf("%d",&rows);
    for(i=0;i<rows;i++)
    {
        for(j=0;j<=rows;j++)
        {
            if(j==i||j==rows-i)
            {
                printf("*");  
            }
            else
               printf(" ");
        }
        printf("\n");
    }

    return 0;
}
